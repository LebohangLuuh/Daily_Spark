{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "content-hub-frontend": {
      "projectType": "application",
      "root": "frontend",
      "sourceRoot": "frontend/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "frontend/dist/content-hub-frontend",
            "index": "frontend/src/index.html",
            "main": "frontend/src/main.ts",
            "polyfills": "frontend/src/polyfills.ts",
            "tsConfig": "frontend/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "frontend/src/assets",
                "output": "assets"
              },
              {
                "glob": "favicon.ico",
                "input": "frontend/src",
                "output": "/"
              }
            ],
            "styles": ["frontend/src/styles.css"],
            "scripts": [  "src/env.js"]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "frontend/src/environments/environment.ts",
                  "with": "frontend/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ]
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "extractLicenses": false
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "content-hub-frontend:build:production"
            },
            "development": {
              "browserTarget": "content-hub-frontend:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "frontend/src/test.ts",
            "polyfills": "frontend/src/polyfills.ts",
            "tsConfig": "frontend/tsconfig.spec.json",
            "karmaConfig": "frontend/karma.conf.js",
            "assets": [
              {
                "glob": "**/*",
                "input": "frontend/src/assets",
                "output": "assets"
              },
              {
                "glob": "favicon.ico",
                "input": "frontend/src",
                "output": "/"
              }
            ],
            "styles": ["frontend/src/styles.css"],
            "scripts": [  "src/env.js"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
