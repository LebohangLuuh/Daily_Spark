{
  "name": "daily-spark-backend",
  "version": "1.0.0",
  "description": "Daily Spark Backend API with Node.js, MongoDB, and OpenAI",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "cleanup:duplicates": "node src/scripts/removeDuplicates.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "seed": "node scripts/seed.js",
    "ng": "ng",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "serve": "http-server dist",
    "format": "prettier --write .",
    "github-build": "ng build --configuration production --base-href 'https://LbohangLuuh.github.io/Daily_Spark/'"
  },
  "dependencies": {
    "bad-words": "^4.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.2.1",
    "groq-sdk": "^0.30.0",
    "helmet": "^7.2.0",
    "mongodb": "^6.19.0",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.1",
    "openai": "^4.104.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}